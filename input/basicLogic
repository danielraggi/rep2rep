typeSystem basicLogic =
  types _:formula, _:basicProp, and, or, implies, not, binary, unary
  order and < binary,
        or < binary,
        implies < binary,
        not < unary,
        basicProp < formula

conSpec basicLogicG:basicLogic =
  constructors
    logicApplyBinary : [binary,formula,formula] -> formula,
    logicApplyUnary : [unary,formula] -> formula
